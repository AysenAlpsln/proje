<html lang="en" class="no-js">
 <!--<![endif]-->
<head>
    <meta charset="UTF-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
    <title>Login and Registration Form with HTML5 and CSS3</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Login and Registration Form with HTML5 and CSS3" />
    <meta name="keywords" content="html5, css3, form, switch, animation, :target, pseudo-class" />
    <meta name="author" content="Codrops" />
    <link rel="shortcut icon" href="../favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/LoginRegistrationForm/css/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/LoginRegistrationForm/css/style3.css" />
    <link rel="stylesheet" type="text/css" href="~/LoginRegistrationForm/css/animate-custom.css" />
</head>
<body>
    <div class="container">
        <header>
            <h1>Welcome <span>READER </span></h1>
        </header>
        <section>
            <div id="container_demo">
                <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
                <a class="hiddenanchor" id="toregister"></a>
                <a class="hiddenanchor" id="tologin"></a>
                <div id="wrapper">
                    <div id="login" class="animate form">
                        @*@ViewBag.Mesaj*@
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            <h1>Log in</h1>
                            <p>
                                @Html.LabelFor(model => model.takmaad, "Kullanıcı Adı:")
                                @Html.TextBoxFor(model => model.takmaad, new { @class = "form-control", placeholder = "Kullanıcı Adınızı Giriniz..." })
                                @*<label for="username" class="uname" data-icon="u"> Your username </label>
                <input id="username" name="takmaad" required="required" type="text" placeholder="myusername" />*@
                            </p>
                            <p>
                                @Html.LabelFor(model => model.sıfre, "Parola:")
                                @Html.PasswordFor(model => model.sıfre, new { @class = "form-control", placeholder = "Parolanızı Giriniz..." })
                                @*<label for="password" class="youpasswd" data-icon="p"> Your password </label>
                <input id="password" name="sıfre" required="required" type="password" placeholder="eg. X8df!90EO" />*@
                            </p>
                            <p class="login button">
                                <input type="submit" value="Login" />
                            </p>
                            <p class="change_link">
                                Not a member yet ?
                                <a href="#toregister" class="to_register">Join us</a>
                            </p>
                        }
                    </div>

                    <div id="register" class="animate form">
                        @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
                        {
                            <h1> Sign up </h1>
                            <form action="#" method="post">
                                <p>
                                    @Html.LabelFor(model => model.AdSoyad,"Ad Soyad:")
                                    @Html.TextBoxFor(model => model.AdSoyad, new { @class="form-control",placeholder="Adınız ve Soyadınız..."})
                                    @*<label for="namesignup" class="name" data-icon="u">Your name and surname</label>
                                    <input id="namesignup" name="AdSoyad" required="required" type="text" placeholder="Name and Surname..." />*@
                                </p>
                                <p>
                                    @Html.LabelFor(model => model.takmaad,"Kullanıcı Adı:")
                                    @Html.TextBoxFor(model => model.takmaad, new { @class = "form-control", placeholder = "Belirlediğiniz Kullanıcı Adı..." })
                                    @*<label for="usernamesignup" class="uname" data-icon="u">Your username</label>
        <input id="usernamesignup" name="takmaad" required="required" type="text" placeholder="mysuperusername" />*@
                                </p>

                                <p>
                                    @Html.LabelFor(model => model.emaıl,"Email:")
                                    @Html.TextBoxFor(model => model.emaıl, new { @class = "form-control", placeholder = "Mail Adresiniz..." })
                                    @*<label for="emailsignup" class="youmail" data-icon="e"> Your email</label>
        <input id="emailsignup" name="emaıl" required="required" type="email" placeholder="mysupermail@mail.com" />*@
                                </p>
                                <p>
                                    @Html.LabelFor(model => model.sıfre,"Parola:")
                                    @Html.TextBoxFor(model => model.sıfre, new { @class = "form-control", placeholder = "Belirlediğiniz Paralo..." })
                                    @*<label for="passwordsignup" class="youpasswd" data-icon="p">Your password </label>
        <input id="passwordsignup" name="sıfre" required="required" type="password" placeholder="eg. X8df!90EO" />*@
                                </p>
                                <p style="color:firebrick">
                                    *Parola harf içeremez!
                                    <br />
                                    *Parola özel karakter içeremez!
                                </p>
                                <p>
                                    @*<label for="passwordsignup_confirm" class="youpasswd" data-icon="p">Please confirm your password </label>
        <input id="passwordsignup_confirm" name="passwordsignup_confirm" required="required" type="password" placeholder="eg. X8df!90EO" />*@
                                </p>
                                <p>
                                    @Html.HiddenFor(m => m.role, new { Value="U"})
                                </p>
                                <p class="signin button">
                                    <input type="submit" value="Sign up" />
                                </p>
                                <p class="change_link">
                                    Already a member ?
                                    <a href="#tologin" class="to_register"> Go and log in </a>
                                </p>
                            </form>
                        }

                    </div>

                </div>
            </div>
        </section>
    </div>
</body>
</html>
