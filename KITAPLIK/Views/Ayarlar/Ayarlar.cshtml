@model KITAPLIK.Models.Entity.Uyeler

@{
    ViewBag.Title = "Ayarlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="form-group">
    @Html.LabelFor(m => m.takmaad)
    @Html.TextBoxFor(m => m.takmaad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.AdSoyad)
    @Html.TextBoxFor(m => m.AdSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.Cınsıyet)
    <br />
    <select id="cinsiyet" name="Cınsıyet">
        <option>Seçiniz</option>
        <option value="Doğru">Kadın</option>
        <option value="Yanlış">Erkek</option>
    </select>
    <br />
    @Html.LabelFor(m => m.DogumTarıhı)
    @Html.TextBoxFor(m => m.DogumTarıhı, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.DogumYeri)
    @Html.TextBoxFor(m => m.DogumYeri, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.Telefon)
    @Html.TextBoxFor(m => m.Telefon, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.Meslegi)
    @Html.TextBoxFor(m => m.Meslegi, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.YasadıgıSehir)
    @Html.TextBoxFor(m => m.YasadıgıSehir, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.Biografi)
    @Html.TextAreaFor(m => m.Biografi, new { @class = "form-control" })
</div>
    <div>
        <button class="btn btn-info">KAYDET</button>
    </div>



